{
  "name": "skyward-web-starter-kit",
  "version": "1.0.1",
  "author": "Hideki Abe",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && run-p watch serve",
    "build": "run-s build:*",
    "build:pug": "pug -o htdocs/ --pretty --basedir src/pug/ src/pug/",
    "build:scss": "node-sass 'src/scss/basic.scss' '.tmp/css/basic.css' --source-map-embed --output-style=expanded",
    "build:postcss": "postcss '.tmp/css/basic.css' -o 'htdocs/common/css/basic.css' -m --config conf/postcss.config.js",
    "build:webpack": "webpack --config conf/webpack.config.js",
    "lint:css": "npm run build:scss && npm run build:postcss && stylelint htdocs/common/css/*.css",
    "watch": "run-p watch:*",
    "watch:pug": "pug -o htdocs/ --pretty --basedir src/pug/ -w src/pug/",
    "watch:scss": "npm run build:scss && node-sass 'src/scss/basic.scss' '.tmp/css/basic.css' --source-map-embed --output-style=expanded -w",
    "watch:postcss": "postcss '.tmp/css/basic.css' -o 'htdocs/common/css/basic.css' -m --config conf/postcss.config.js -w",
    "watch:webpack": "webpack --config conf/webpack.config.js -w",
    "serve": "browser-sync start --config conf/bs-config.js",
    "finish": "replace-in-file from to --configFile=conf/source_tuning.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "autoprefixer": "^9.8.4",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "css-mqpacker": "^7.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "pug": "^3.0.0",
    "pug-cli": "github:pugjs/pug-cli",
    "replace-in-file": "^4.3.1",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "private": true
}
