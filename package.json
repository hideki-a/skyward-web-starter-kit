{
  "name": "skyward-web-starter-kit",
  "version": "1.0.0",
  "author": "Hideki Abe",
  "license": "MIT",
  "scripts": {
    "start": "run-p watch serve",
    "build": "run-s build:*",
    "build:scss": "node-sass 'src/scss/basic.scss' '.tmp/css/basic.css' --source-map-embed --output-style=expanded",
    "build:postcss": "postcss '.tmp/css/basic.css' -o 'htdocs/common/css/basic.css' -m -u autoprefixer css-mqpacker",
    "watch": "run-p watch:*",
    "watch:scss": "node-sass 'src/scss/basic.scss' '.tmp/css/basic.css' --source-map-embed --output-style=expanded -w",
    "watch:postcss": "postcss '.tmp/css/basic.css' -o 'htdocs/common/css/basic.css' -m -u autoprefixer css-mqpacker -w",
    "serve": "browser-sync start --config conf/bs-config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "browsersync-ssi": "^0.2.4",
    "css-mqpacker": "^7.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3"
  },
  "private": true
}
